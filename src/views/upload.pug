extends base.pug

block content
    div.upload_container
        div.upload_video
            video#preview
            button#startBtn Start Recording 
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(form="video") Video File
            input(id="video", name="video", type="file", accept="video/*")
            label(form="tumb") tumbnail File
            input(id="thumb", name="thumb", type="file", accept="image/*")
            input(placeholder="video title", required, type="text", name="title")
            input(placeholder="video description", required, type="text", name="description")
            input(placeholder="Hastags", required, type="text", name="hashtags")
            input(value="Upload video", type="submit")

block scripts
    script(src="/static/js/recorder.js")